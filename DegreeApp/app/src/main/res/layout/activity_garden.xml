<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/garden_layout"
    android:layout_gravity="center"
    android:background="@color/background_actionbar">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/garden_background">
    </ImageView>

    <ImageView
        android:id="@+id/garden_back"
        android:layout_width="109dp"
        android:layout_height="54dp"
        android:src="@drawable/back_arrow_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/garden_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/aggiungi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="15dp"
        android:background="@color/add_button"/>

    <Button
        android:id="@+id/garden_delete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/elimina"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/garden_add"
        app:layout_constraintTop_toBottomOf="@+id/garden_add"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp"
        android:background="@color/delete_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>