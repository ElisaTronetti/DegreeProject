<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <Button
       android:id="@+id/achievement_back"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/indietro"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_margin="5dp"/>

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="5dp"
       android:text="@string/i_miei_trofei"
       android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
       app:layout_constraintBottom_toTopOf="@+id/achievement_recycler"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent">
   </TextView>

   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/achievement_recycler"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@+id/achievement_back"
       tools:listitem="@layout/widget_achievement">
   </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>